<!-- This type defines the filter configuration data for the Cognito Scope Discovery filter
which discovers AWS Cognito scopes from User Pool and maps them to Resource Servers -->

<entityStoreData>
	<entityType name="CognitoScopeDiscoveryFilter" extends="AWSFilter">
		<constant name="class" type="string" value="com.axway.aws.cognito.CognitoScopeDiscoveryFilter" />
		<field name="userPoolId" type="string" cardinality="1" />
		<field name="clientId" type="string" cardinality="1" />
		<field name="awsRegion" type="string" cardinality="1" />
		<field name="credentialType" type="string" cardinality="1" />
		<field name="awsCredential" type="^ApiKeyProfile" cardinality="?" />
		<field name="clientConfiguration" type="^AWSClientConfiguration" cardinality="?" />
		<field name="credentialsFilePath" type="string" cardinality="1" />
		<field name="scopesInput" type="string" cardinality="1" />
	</entityType>

	<!-- Default values for fields -->
	<entity xmlns="http://www.vordel.com/2005/06/24/entityStore"
		type="CognitoScopeDiscoveryFilter">
		<key type="CognitoScopeDiscoveryFilter">
			<id field="name" value="Default Cognito Scope Discovery Filter" />
		</key>
		<fval name="awsRegion">
			<value>us-east-1</value>
		</fval>
		<fval name="credentialType">
			<value>local</value>
		</fval>
		<fval name="clientConfiguration">
			<value>/External Connections/(AWSSettings)Amazon Web Services Settings/(AWSClientConfiguration)Default AWS Client Configuration</value>
		</fval>
		<fval name="userPoolId">
			<value></value>
		</fval>
		<fval name="clientId">
			<value></value>
		</fval>
		<fval name="credentialsFilePath">
			<value></value>
		</fval>
		<fval name="scopesInput">
			<value></value>
		</fval>
	</entity>

	<!-- Internationalization for logging / audit trail -->
	<entity xmlns="http://www.vordel.com/2005/06/24/entityStore"
		type="InternationalizationFilter">
		<key type="Internationalization">
			<id field="name" value="Internationalization Default" />
		</key>
		<fval name="type">
			        <value>CognitoScopeDiscoveryFilter</value>
		</fval>
		<fval name="logFatal">
			        <value>Error in the Cognito Scope Discovery filter. Error: ${circuit.exception}</value>
		</fval>
		<fval name="logFailure">
			        <value>Failed in the Cognito Scope Discovery filter</value>
		</fval>
		<fval name="logSuccess">
			        <value>Success in the Cognito Scope Discovery filter</value>
		</fval>
	</entity>

</entityStoreData>
